<section class="container">
  <h1 class="title-ha">Find a Doctor You Trust</h1>
    <%= form_tag search_path, method: :get do %>
      <%= label_tag(:location_query, "Location", class: "label") %>
      <%= search_field_tag :location_query,
        params[:location_query],
        placeholder: "Search by Location",
        class: "label" %>
      <%= label_tag(:last_name_query, "Last Name", class: "label") %>
      <%= search_field_tag :last_name_query,
        params[:last_name_query],
        placeholder: "Search by Doctor's Last Name",
        class: "label" %>
      <%= submit_tag "Find Me A Doctor", class: "search" %>
    <% end %>
  </form>
</section>
