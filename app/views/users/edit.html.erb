<%= form_for @user do |form| %>

  <% if @user.errors.any? %>
    <%= pluralize(@user.errors.count, "error") %> prevented your account from being created:
    <ul>
      <% @user.errors.full_messages.each do |error_message| %>
        <li><%= error_message %></li>
      <% end %>
    </ul>
  <% end %>

<section class="container">
  <div class="welcome profile">Welcome
    <%= link_to " Dr. #{current_user.last_name}", user_path(current_user) %>,
    please edit your profile below.
  </div>
  <div>
    <p class="photo"><%= image_tag @user.picture.url %>
    <%= form.file_field :picture %>
  </div>
  <div class="info">
  <div>
    <%= form.label :first_name, class: 'label'%>
    <%= form.text_field :first_name %>
  </div>
  <div>
    <%= form.label :last_name, class: 'label' %>
    <%= form.text_field :last_name %>
  </div>
  <div>
    <%= form.label :email, class: 'label'%>
    <%= form.email_field :email %>
  </div>
  <div>
    <%= form.label :street_address, class: 'label' %>
    <%= form.text_field :street_address %>
  </div>
  <div>
    <%= form.label :city, class: 'label' %>
    <%= form.text_field :city %>
  </div>
  <div>
    <%= form.label :state, class: 'label' %>
    <%= form.text_field :state %>
  </div>
  <div>
    <%= form.label :zip, class: 'label' %>
    <%= form.text_field :zip %>
  </div>
  <div>
    <%= form.label :phone, class: 'label' %>
    <%= form.text_field :phone %>
  </div>
  <div>
    <%= form.submit "Save Profile", class: 'save'%>
  </div>
</section>
<% end %>
