<section class="container">
  <h1 class="profile">Doctor <%= (@user.last_name)%>'s Profile</h1>
  <div class="photo">
    <p class="label">Photo: <%= image_tag @user.picture.url,
      class: 'picture' %></p>
  </div>
  <div class="info">
    <ul>
      <li>Name<p>Doctor <%= @user.full_name %></p></li>
      <li>Email<p><%= @user.email %></p></li>
      <li>Address<p><%= @user.street_address %></br>
        <%= @user.city %>,
        <%= @user.state %>
        <%= @user.zip %></p></li>
      <li>Phone Number<p><%= @user.phone %></p></li>
    </ul>
    <% if user_authorized? %>
      <div class="edit button">
        <%= link_to "Edit Profile", edit_user_path(@user) %>
      </div>
      <div class="line">
        <%= button_to "Delete Account",
          user_path(@user),
          method: :delete,
          data: { confirm: "Are you sure want to delete your account?" },
          id: 'delete' %>
      </div>
    <% else %>
      <div class="edit button">
        <%= link_to "Schedule An Appointment", new_appointment_path %>
      </div>
    <% end %>
  </div>
</section>
